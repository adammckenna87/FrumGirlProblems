@{
    ViewData["Title"] = "Home Page";
}



<section class="slider d-flex align-items-end">
    <!-- <img src="images/slider.jpg" class="img-fluid" alt="#"> -->
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12">
                <div class="slider-title_box">
                    <div class="row">
                        <p></p>
                    </div>
                    <div class="row d-flex justify-content-center my-6">
                        <div class="col-md-10">
                            <form class="form-wrap mt-4" asp-controller="Gemach" asp-action="Index" method="get">
                                <div class="btn-group" role="group" aria-label="Basic  example">
                                    <select id="categoryName" class="custom-select custom-select-lg mb-3" name="category">
                                        <option value="" selected>What Are You Looking for?</option>
                                        @foreach(string cat in ((string[])ViewData["Categories"]))
                                        {
                                            <option value="@cat">@cat</option>

                                        }
                                        
                                    </select>
                                    <select id="cityName" class="custom-select custom-select-lg mb-3" name="city">
                                        <option value="" selected>Choose a City</option>
                                        @foreach (string city in ((string[])ViewData["Cities"]))
    {
                                    <option value="@city">@city</option>

}

                                    </select>
                                    <input id="selectInput" type="submit" class="btn btn-warning" style="height: 3rem; width: 35rem;" value="Search" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
